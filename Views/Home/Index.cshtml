@model IEnumerable<blog.Models.Posts>
@{
    ViewBag.Title = "Home Page";
}


<section class="position-relative" style="width: 100%; height: 45vh; background: url(https://www.ml-labs.ie/wp-content/uploads/2020/12/ai-machine-learning.png); ">

    <h1 class="position-absolute display-2 text-white" style="top:180px;left:500px;color:#000">Start Your Journey With BlogIT</h1>
</section>


<section class="container">
    <h2 class="text-center display-4 mt-4 mb-4">Latest Blogs</h2>

    <div class="container mt-4">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <img src="~/Uploads/@item.BlogImage" class="card-img-top" style="min-height: 200px; max-height:200px; object-fit:cover" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-truncate">@item.Content </p>
                            <a href="" class="btn btn-outline-success btn-sm">Read More</a>
                            <a href="" class="btn btn-outline-danger btn-sm"><i class="bi bi-heart"></i></a>
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>


</section>